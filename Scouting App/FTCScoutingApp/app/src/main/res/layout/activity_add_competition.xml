<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.millburnrobotics.ftcscoutingapp.AddCompetitionActivity"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/light_blue">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Competition"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:hint="Competition Date (MM/DD/YYYY)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/teamnumber"
        android:hint="Hosting Team Number" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_spinner"
        android:layout_gravity="left"
        android:popupBackground="@color/light_blue"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compname"
        android:hint="Competition Name" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:id="@+id/competition"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/confirm"
        android:scaleType="centerInside"
        android:background="@color/light_blue" />

</LinearLayout>

