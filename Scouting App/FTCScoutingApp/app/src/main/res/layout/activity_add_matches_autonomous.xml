<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autonomous"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Rescue\nBeacon"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Climbers"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Parking"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ffdddd">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T1TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T1Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T1ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T1ParkingAuto"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ffdddd">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T2TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"
                 />
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T2Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T2ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T2ParkingAuto"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ddddff">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T3TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center" />

            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T3Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T3ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T3ParkingAuto"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ddddff">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T4TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center" />
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T4Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T4ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:id="@+id/T4ParkingAuto"/>
        </TableRow>
    </TableLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Back"
            android:layout_weight="1"
            android:id="@+id/back"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Notes"
            android:layout_weight="1"
            android:id="@+id/notes"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next"
            android:layout_weight="1"
            android:id="@+id/next"/>

    </LinearLayout>

</LinearLayout>