<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/light_blue">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autonomous"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Rescue\nBeacon"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Climbers"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Parking"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ffdddd">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T1TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_red"
                android:id="@+id/T1Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_red"
                android:id="@+id/T1ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_red"
                android:id="@+id/T1ParkingAuto"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ffdddd">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T2TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"
                 />
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_red"
                android:id="@+id/T2Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_red"
                android:id="@+id/T2ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_red"
                android:id="@+id/T2ParkingAuto"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ddddff">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T3TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center" />

            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_blue"
                android:id="@+id/T3Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_blue"
                android:id="@+id/T3ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_blue"
                android:id="@+id/T3ParkingAuto"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:background="#ddddff">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="####"
                android:id="@+id/T4TXT"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center" />
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_blue"
                android:id="@+id/T4Beacon"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_blue"
                android:id="@+id/T4ClimbersAuto"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:popupBackground="@color/alliance_blue"
                android:id="@+id/T4ParkingAuto"/>
        </TableRow>
    </TableLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:src="@drawable/back"
            android:background="@color/light_blue"
            android:scaleType="fitXY"
            android:id="@+id/back"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/notes"
            android:background="@color/light_blue"
            android:scaleType="fitXY"
            android:id="@+id/notes"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/next"
            android:scaleType="fitXY"
            android:background="@color/light_blue"
            android:id="@+id/next"
            android:layout_gravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>