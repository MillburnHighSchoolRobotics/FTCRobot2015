<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_matches"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="co.millburnrobotics.ftcscoutingapp.AddMatchesActivity"
    android:background="@color/light_blue"
    android:stretchColumns="*"
    android:shrinkColumns="1">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <EditText
            android:id="@+id/matchnumber"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Match #"
            android:inputType="number"
            android:layout_column="0"
            android:layout_span="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alliance_red"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_gravity="center"
            android:layout_column="0"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team1"
            android:layout_column="1" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alliance_red"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 2"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team2"
            android:layout_column="1" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alliance_blue"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team3"
            android:layout_column="1" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/alliance_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 4"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_gravity="center"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team4"
            android:layout_column="1" />
    </TableRow>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_span="2"
            android:layout_column="0"
            android:layout_height="35dp"
            android:weightSum="1">

            <ImageButton
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:id="@+id/toTeleopPage"
                android:src="@drawable/create"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@color/light_blue" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:id="@+id/toMenuPage"
                android:src="@drawable/edit"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@color/light_blue"/>

        </LinearLayout>


    </TableRow>




</TableLayout>

